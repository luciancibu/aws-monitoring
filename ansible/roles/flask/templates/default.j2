server {
    listen 80;
    server_name {{ hostvars['flask']['public_ip'] }};

    root /var/www/html;
    index index.html;

    location /view {
        proxy_pass http://127.0.0.1:{{ flask_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location / {
        index index.html;
    }
}
